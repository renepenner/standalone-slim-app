{
  "name": "slim/slim-skeleton",
  "description": "A Slim Framework skeleton application for rapid development",
  "license": "MIT",
  "require": {
    "php": ">=7.3",
    "slim/slim": "^3.12",
    "php-di/slim-bridge": "^2.0",
    "phpmetrics/phpmetrics": "^2.4",
    "league/flysystem": "^1.0",
    "zircote/swagger-php": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "squizlabs/php_codesniffer": "*",
    "dprevite/lint": "^1.0",
    "phpmd/phpmd": "*",
    "phploc/phploc": "*",
    "sebastian/phpcpd": "*",
    "captainhook/captainhook": "^4.4",
    "povils/phpmnd": "^2.1",
    "wambo-co/phpmd-extension": "^0.1.0"
  },
  "autoload": {
    "psr-4": {
      "Wambo\\Demo\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wambo\\Tests\\Unit\\": "tests/Unit"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public",
    "report": "php -S localhost:8000 -t report",
    "test": "phpunit --coverage-text",
    "phpcs": "vendor/bin/phpcs --standard=PSR2 src/",
    "phpcbf": "vendor/bin/phpcbf --standard=PSR2 src/ > /dev/null || true",
    "phploc": "vendor/bin/phploc src/",
    "phpmd": "vendor/bin/phpmd src/ text ruleset.xml",
    "phpcpd": "vendor/bin/phpcpd --min-lines 3 --min-tokens 20 src/",
    "phpmnd": "vendor/bin/phpmnd ./src",
    "swagger-create": "./vendor/bin/openapi -o public/swagger/swagger.json --bootstrap src/config.php --format json src/",
    "test-all": [
      "composer phpcbf",
      "composer phpcs",
      "composer phpmd",
      "composer phpcpd",
      "composer phpmnd",
      "composer test"
    ]
  },
  "config": {
    "process-timeout": 0,
    "preferred-install": {
      "*": "dist"
    }
  },
  "prefer-stable": true
}
