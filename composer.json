{
  "name": "slim/slim-skeleton",
  "description": "A Slim Framework skeleton application for rapid development",
  "license": "MIT",
  "require": {
    "php": ">=7.2",
    "slim/slim": "^3.12",
    "php-di/slim-bridge": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": ">=5.0",
    "squizlabs/php_codesniffer": "*",
    "dprevite/lint": "^1.0",
    "phpmd/phpmd": "*",
    "phploc/phploc": "*",
    "sebastian/phpcpd": "*",
    "captainhook/captainhook": "^4.4",
    "povils/phpmnd": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Wambo\\Demo\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wambo\\Tests\\Unit\\": "tests/Unit"
    }
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public",
    "test": "phpunit",
    "phpcs": "vendor/bin/phpcs --standard=PSR2 src/",
    "php-cs-fixer": "vendor/bin/phpcbf --standard=PSR2 src/",
    "phploc": "vendor/bin/phploc src/",
    "phpmd": "vendor/bin/phpmd src/ text ruleset.xml",
    "phpcpd": "vendor/bin/phpcpd --min-lines 3 --min-tokens 20 src/",
    "phpmnd": "vendor/bin/phpmnd ./src",
    "test-all": [
      "composer php-cs-fixer",
      "composer phpcs",
      "composer phpmd",
      "composer phpcpd",
      "composer phpmnd",
      "composer test"
    ]
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    }
  },
  "prefer-stable": true
}
