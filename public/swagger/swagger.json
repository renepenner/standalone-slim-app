{
    "openapi": "3.0.0",
    "info": {
        "title": "Slim API Skeleton",
        "version": "0.1"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Development Server"
        }
    ],
    "paths": {
        "/": {
            "get": {
                "summary": "Returns a Demo Message",
                "operationId": "Wambo\\Demo\\Demo\\Action\\HelloWorld::__invoke",
                "responses": {
                    "200": {
                        "description": "Returns a MessageViewModel",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/MessageViewModel"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Returns a ErrorViewModel",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorViewModel"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ErrorViewModel": {
                "properties": {
                    "message": {
                        "description": "The Message",
                        "required": [
                            "message"
                        ],
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "MessageViewModel": {
                "properties": {
                    "message": {
                        "description": "The Message",
                        "required": [
                            "message"
                        ],
                        "type": "string"
                    }
                },
                "type": "object"
            }
        }
    }
}